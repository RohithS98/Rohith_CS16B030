<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HostActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/name_label"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="Enter your name"/>
        <EditText
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"

            android:layout_below="@+id/name_label"
            android:hint="Name"/>

        <TextView
            android:id="@+id/contact_label"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="Enter your contact number"

            android:layout_below="@id/name_field"/>
        <EditText
            android:id="@+id/contact_field"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:hint="contact"

            android:layout_below="@id/contact_label"/>

        <TextView
            android:id="@+id/city_label"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="Enter your city"

            android:layout_below="@id/contact_field"/>

        <EditText
            android:id="@+id/city_field"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:hint="City"

            android:layout_below="@+id/city_label"/>

        <TextView
            android:id="@+id/address_label"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="Enter your hosting address"

            android:layout_below="@+id/city_field"/>
        <EditText
            android:id="@+id/address_field"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:hint="Address"

            android:layout_below="@+id/address_label"/>

        <Button
            android:id="@+id/host_parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Host Parking"
            android:backgroundTint="@color/colorPrimary"
            android:layout_below="@+id/address_field"
            android:layout_centerHorizontal="true"
            android:onClick="uploadHostDetails"/>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>